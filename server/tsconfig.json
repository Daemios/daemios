{
  "compilerOptions": {
    "target": "ES2020",
  "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
  "allowJs": true,
  "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
