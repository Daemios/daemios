{
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "latest"
    }
  },
  "extends": [
    "airbnb",
    "plugin:vue/recommended"
  ],
  "rules": {
    "camelcase": "off",
    "import/no-unresolved": 0,
    "import/extensions": 0,
    "no-param-reassign": [
      "error",
      {
        "props": true,
        "ignorePropertyModificationsFor": [
          "state"
        ]
      }
    ],
    "vue/multiline-html-element-content-newline": ["error", {
      "allowEmptyLines": true
    }],
    "vue/prop-name-casing": "off"
  }
}